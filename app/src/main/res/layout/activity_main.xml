<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUsuarioId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id de usuario"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/etUsuarioN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsuarioN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Usuario"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsuarioId"
        app:layout_constraintBottom_toTopOf="@id/etUsuarioE"
    />

    <EditText
        android:id="@+id/etUsuarioE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email de usuario"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSet"
        app:layout_constraintTop_toBottomOf="@id/etUsuarioN"
    />

    <Button
        android:id="@+id/btnSet"
        android:text="Guardar Datos"
        android:layout_margin="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUsuarioE"
        />
    <EditText
        android:id="@+id/etUsuarioIdGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id de usuario"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSet" />

    <Button
        android:id="@+id/btnGet"
        android:text="Obtener Datos"
        android:layout_margin="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUsuarioIdGet"
        />

</androidx.constraintlayout.widget.ConstraintLayout>